<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RegisterCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="be.kuleuven.softdev.yujiezhou.parcel_tracker.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                app:srcCompat="@mipmap/singlelogo" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/basic"
                android:text="Please enter your name"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/mycolor"
                android:ems="10"
                android:fontFamily="@font/basic"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textColorHint="#cacaca"
                android:textIsSelectable="false"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/basic"
                android:text="Please enter your E-mail"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/mycolor"
                android:ems="10"
                android:fontFamily="@font/basic"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textColorHint="#cacaca"
                android:textColorLink="@android:color/darker_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/basic"
                android:text="Please enter your password"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/mycolor"
                android:ems="10"
                android:fontFamily="@font/basic"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textColorHint="#cacaca"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:fontFamily="@font/basic"
                android:onClick="RegisterCheck"
                android:text="Register"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
